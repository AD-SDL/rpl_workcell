{ "python":
  { "name"    : "color_picker_loop.py",
    "workflows" : [
      { "name"    : "cp_wf_new_plate.yaml",
        "actions" : [
            { "name": "get_plate", "instrument": "sciclops", "from": "sciclops", "to": "<staging>" },
            { "name": "transfer", "instrument":  "pf400", "from": "<staging>", "to": "camera" }
        ]
      },
      { "name"    : "cp_wf_mixcolor.yaml",
        "repeat"  : ["publish", "compute"],
        "actions" : [
            { "name": "transfer", "instrument":  "pf400", "from": "camera", "to": "ot2" },
            { "name": "run_protocol", "instrument":  "ot2", "protocol" : "combined_protocol.yaml" },
            { "name": "transfer", "instrument":  "pf400", "from": "ot2", "to": "camera" },
            { "name": "take_picture", "instrument":  "camera" }
        ]
      },
      { "name"    : "cp_wf_trashplate.yaml",
        "actions" : [
            { "name": "transfer", "instrument":  "pf400", "from": "camera", "to": "<trash>" }
        ]
      }
    ]
  }
}
